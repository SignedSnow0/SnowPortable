{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure SnowEditor",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S${workspaceFolder}/",
                "-B${workspaceFolder}/bin/",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-GVisual Studio 17 2022"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Build SnowEditor",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/bin/"
            ],
            "dependsOn": [
                "Configure SnowEditor"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}